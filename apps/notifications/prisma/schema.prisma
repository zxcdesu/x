generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output        = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubscriberProvider {
  Telegram
}

model Subscriber {
  id         Int                @id @default(autoincrement())
  userId     Int
  externalId String?
  provider   SubscriberProvider

  @@unique([userId, provider])
  @@unique([externalId, provider])
  @@index([userId])
}
