generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output        = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventType {
  Contact
}

model Event {
  id        Int                     @id @default(autoincrement())
  projectId Int?
  userId    Int?
  type      EventType
  payload   Json?
  createdAt DateTime                @default(now())

  @@index([projectId])
  @@index([userId])
  @@index([type])
  @@index([createdAt])

  @@unique([projectId, userId, id])
}
