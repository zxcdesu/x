generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output        = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  projectId      Int           @id
  country        String
  currency       String        @default("USD")
  currentBalance Decimal       @default(0) @db.Decimal(15, 6)
  subscription   Subscription?
  payments       Payment[]
}

model Subscription {
  projectId Int      @id
  wallet    Wallet   @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  expiresAt DateTime

  @@index([expiresAt])
}

enum PaymentProvider {
  Yookassa
}

enum PaymentStatus {
  Pending
  Succeeded
  Cancelled
  Refunded
}

model Payment {
  id           Int             @id @default(autoincrement())
  projectId    Int
  wallet       Wallet          @relation(fields: [projectId], references: [projectId], onDelete: Cascade)
  externalId   String?
  provider     PaymentProvider
  status       PaymentStatus   @default(Pending)
  amount       Decimal         @db.Decimal(15, 6)
  incomeAmount Decimal?        @db.Decimal(15, 6)
  expiresAt    DateTime?

  @@unique([externalId, provider])
  @@index([projectId])
  @@index([expiresAt])
}
