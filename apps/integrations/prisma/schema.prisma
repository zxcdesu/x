generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IntegrationType {
  Amocrm
  Bitrix
}

model Integration {
  id        String          @id @default(uuid()) @db.Uuid
  projectId Int
  type      IntegrationType
  accountId String
  token     Json            @default("{}")

  @@unique([projectId, id])
}

enum WebhookEventType {
  ChatEvent
  MessageEvent
}

model Webhook {
  id        Int              @id @default(autoincrement())
  projectId Int
  eventType WebhookEventType
  url       String

  @@unique([projectId, id])
}
