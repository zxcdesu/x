generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output        = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IntegrationType {
  Amocrm
  Bitrix
}

model Integration {
  id        String          @id @default(uuid()) @db.Uuid
  projectId Int
  type      IntegrationType
  accountId String
  token     Json            @default("{}")

  @@unique([projectId, id])
}

enum WebhookType {
  ChatEvent
  MessageEvent
}

model Webhook {
  id        Int         @id @default(autoincrement())
  projectId Int
  url       String
  type      WebhookType

  @@unique([projectId, id])
}
