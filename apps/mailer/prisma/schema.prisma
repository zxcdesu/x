generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client-mailer"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MailingStatus {
  Disabled
  Scheduled
  Active
  Finished
}

model Mailing {
  id          Int             @id @default(autoincrement())
  projectId   Int
  name        String
  description String          @default("")
  color       String
  channelId   Int
  tagIds      Int[]
  hsmIds      Int[]
  status      MailingStatus   @default(Disabled)
  scheduledAt DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  workers     MailingWorker[]

  @@unique([projectId, id])
  @@index([status])
  @@index([scheduledAt])
}

enum MailingWorkerStatus {
  Scheduled
  Active
  Finished
  Failed
}

model MailingWorker {
  id           Int                 @id @default(autoincrement())
  mailingId    Int
  mailing      Mailing             @relation(fields: [mailingId], references: [id], onDelete: Cascade)
  contactId    Int
  accountId    String
  messageId    Int?
  variables    Json                @default("{}")
  scheduledAt  DateTime            @default(now())
  status       MailingWorkerStatus @default(Scheduled)
  failedReason String?

  @@index([mailingId])
  @@index([contactId])
  @@index([messageId])
  @@index([status])
  @@index([scheduledAt])
}
